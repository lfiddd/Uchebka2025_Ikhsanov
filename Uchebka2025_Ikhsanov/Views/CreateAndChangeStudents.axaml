<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
        x:Class="Uchebka2025_Ikhsanov.Views.CreateAndChangeStudents"
        Title="CreateAndChangeStudents">
    <Border Background="#F1F5F9">
    <Grid Margin="30">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Центрируем форму -->
        <StackPanel Orientation="Vertical"
                    Spacing="8"
                    Grid.Row="0"
                    HorizontalAlignment="Center"
                    Width="250"> <!-- Фиксированная ширина для всех полей -->

            <!-- Фамилия -->
            <TextBlock Text="Фамилия"
                       FontSize="14"
                       FontWeight="Medium"
                       Foreground="#1E293B"/>
            <TextBox x:Name="FullnameText"
                     Text="{Binding Fullname}"
                     Height="40"
                     FontSize="16"
                     Padding="10"
                     BorderThickness="1.5"
                     BorderBrush="#CBD5E1"
                     CornerRadius="6"/>

            <!-- Специальность -->
            <TextBlock Text="Специальность"
                       FontSize="14"
                       FontWeight="Medium"
                       Foreground="#1E293B"/>
            <ComboBox x:Name="ComboSpeciality"
                      Height="40"
                      FontSize="16"
                      Background="White"
                      BorderThickness="1.5"
                      BorderBrush="#CBD5E1"
                      CornerRadius="6">
                <ComboBox.ItemTemplate>
                    <DataTemplate>
                        <TextBlock Text="{Binding IdSpeciality}" FontWeight="SemiBold"/>
                    </DataTemplate>
                </ComboBox.ItemTemplate>
            </ComboBox>

            <!-- Логин -->
            <TextBlock Text="Логин"
                       FontSize="14"
                       FontWeight="Medium"
                       Foreground="#1E293B"/>
            <TextBox x:Name="LoginText"
                     Text="{Binding Login1}"
                     Height="40"
                     FontSize="16"
                     Padding="10"
                     BorderThickness="1.5"
                     BorderBrush="#CBD5E1"
                     CornerRadius="6"/>

            <!-- Пароль -->
            <TextBlock Text="Пароль"
                       FontSize="14"
                       FontWeight="Medium"
                       Foreground="#1E293B"/>
            <TextBox x:Name="PasswordText"
                     Text="{Binding Password}"
                     PasswordChar="●"
                     Height="40"
                     FontSize="16"
                     Padding="10"
                     BorderThickness="1.5"
                     BorderBrush="#CBD5E1"
                     CornerRadius="6"/>
        </StackPanel>

        <!-- Кнопка "Сохранить" -->
        <Button Content="Сохранить"
                Click="SaveButton"
                Grid.Row="1"
                HorizontalAlignment="Center"
                VerticalAlignment="Top"
                Width="180"
                Height="45"
                FontSize="18"
                FontWeight="SemiBold"
                Background="#1E40AF"
                Foreground="White"
                CornerRadius="8"
                Margin="0,20,0,0"/>
    </Grid>
</Border>
</Window>
