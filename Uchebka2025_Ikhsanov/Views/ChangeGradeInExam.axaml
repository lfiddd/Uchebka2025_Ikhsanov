<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
        x:Class="Uchebka2025_Ikhsanov.Views.ChangeGradeInExam"
        Title="Изменение оценки">

    <Border Margin="30" Padding="30" Background="White">
        <Border.Effect>
            <DropShadowEffect BlurRadius="12" OffsetX="0" OffsetY="4" Color="#A0C4E0" Opacity="0.25"/>
        </Border.Effect>

        <StackPanel Spacing="16">

            <!-- Заголовок -->
            <TextBlock Text="Изменение оценки"
                       FontSize="26"
                       FontWeight="SemiBold"
                       HorizontalAlignment="Center"
                       Foreground="#1E293B"
                       Margin="0,0,0,30"/>

            <!-- Дата экзамена -->
            <TextBlock Text="Дата экзамена" FontSize="14" Foreground="#334155"/>
            <DatePicker SelectedDate="{Binding ExamDate}"
                        Height="40"
                        FontSize="16"
                        Background="White"
                        BorderBrush="#CBD5E1"
                        BorderThickness="1.5"
                        CornerRadius="6"
                        IsEnabled="False"/>

            <!-- Дисциплина -->
            <TextBlock Text="Дисциплина" FontSize="14" Foreground="#334155"/>
            <TextBox Text="{Binding DisciplineCodeNavigation.NameDisc}"
                     Height="40"
                     FontSize="16"
                     Padding="10"
                     Background="White"
                     BorderBrush="#CBD5E1"
                     BorderThickness="1.5"
                     CornerRadius="6"
                     IsReadOnly="True"/>

            <!-- Аудитория -->
            <TextBlock Text="Аудитория" FontSize="14" Foreground="#334155"/>
            <TextBox Text="{Binding ClassroomNavigation.ClassRoom}"
                     Height="40"
                     FontSize="16"
                     Padding="10"
                     Background="White"
                     BorderBrush="#CBD5E1"
                     BorderThickness="1.5"
                     CornerRadius="6"
                     IsReadOnly="True"/>

            <!-- Преподаватель -->
            <TextBlock Text="Преподаватель" FontSize="14" Foreground="#334155"/>
            <TextBox Text="{Binding ExaminerTabNavigation.Fullname}"
                     Height="40"
                     FontSize="16"
                     Padding="10"
                     Background="White"
                     BorderBrush="#CBD5E1"
                     BorderThickness="1.5"
                     CornerRadius="6"
                     IsReadOnly="True"/>

            <!-- Студент -->
            <TextBlock Text="Студент" FontSize="14" Foreground="#334155"/>
            <TextBox Text="{Binding StudentRegNavigation.Fullname}"
                     Height="40"
                     FontSize="16"
                     Padding="10"
                     Background="White"
                     BorderBrush="#CBD5E1"
                     BorderThickness="1.5"
                     CornerRadius="6"
                     IsReadOnly="True"/>

            <!-- Оценка — ЕДИНСТВЕННОЕ РЕДАКТИРУЕМОЕ ПОЛЕ -->
            <TextBlock Text="Оценка" FontSize="14" Foreground="#334155"/>
            <ComboBox Name="ComboGrade"
                      Height="40"
                      FontSize="16"
                      Background="White"
                      BorderBrush="#CBD5E1"
                      BorderThickness="1.5"
                      CornerRadius="6"
                      HorizontalAlignment="Stretch"
                      IsEnabled="True">
                <ComboBoxItem Content="2"/>
                <ComboBoxItem Content="3"/>
                <ComboBoxItem Content="4"/>
                <ComboBoxItem Content="5"/>
            </ComboBox>

            <!-- Кнопка "Сохранить" -->
            <Button Content="Сохранить"
                    Click="SaveButton"
                    Height="48"
                    FontSize="18"
                    FontWeight="SemiBold"
                    Margin="0,24,0,0"
                    HorizontalAlignment="Stretch"
                    Background="#1E40AF"
                    Foreground="White"
                    CornerRadius="8"/>
        </StackPanel>
    </Border>
</Window>