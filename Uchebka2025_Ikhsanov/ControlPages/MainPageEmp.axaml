<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="Uchebka2025_Ikhsanov.ControlPages.MainPageEmp">
    <Grid Background="#F8FAFC">
    <Grid.ColumnDefinitions>
        <ColumnDefinition Width="220"/>   
        <ColumnDefinition Width="*"/>
    </Grid.ColumnDefinitions>

    
    <Border Grid.Column="0" Background="#2D3748" Padding="0 30">
        <StackPanel Spacing="8">

            <TextBlock Text="Меню"
                       FontSize="22"
                       FontWeight="Bold"
                       Foreground="White"
                       HorizontalAlignment="Center"
                       Margin="0 0 0 20"/>

            <Button Name="MainBtn"  Content="Главная страница" Height="42" CornerRadius="12" Background="#4A5568" Foreground="White" FontSize="15" Click="MainPageEmployees"/>
            <Button Name="DiscBtn"  Content="Дисциплины"       Height="42" CornerRadius="12" Background="#4A5568" Foreground="White" FontSize="15" Click="DisciplineList"/>
            <Button Name="ExamBtn"  Content="Экзамены"         Height="42" CornerRadius="12" Background="#4A5568" Foreground="White" FontSize="15" Click="ExamsList"/>
            <Button Name="TeachBtn" Content="Преподаватели"    Height="42" CornerRadius="12" Background="#4A5568" Foreground="White" FontSize="15" Click="TeachList"/>
            <Button Name="StudBtn"  Content="Студенты"         Height="42" CornerRadius="12" Background="#4A5568" Foreground="White" FontSize="15" Click="StudList"/>
            <Button Name="HeadBtn"  Content="Зав. кафедры"     Height="42" CornerRadius="12" Background="#4A5568" Foreground="White" FontSize="15" Click="DepartHeadLists"/>

            <Border Background="#4A5568" Height="1" Margin="16 16"/>

            <Button Content="Выход"
                    Height="42"
                    CornerRadius="12"
                    Background="#E53E3E"
                    Foreground="White"
                    FontSize="15"
                    FontWeight="SemiBold"
                    Click="Leave"/>
        </StackPanel>
    </Border>

    
    <ScrollViewer Grid.Column="1" Padding="40 30">
    <Border Background="White"
            CornerRadius="20"
            Padding="32"
            BoxShadow="0 10 40 0 #20000000"
            BorderBrush="#E2E8F0"
            BorderThickness="1"
            MaxWidth="520">

        <StackPanel Spacing="28">

            <Grid ColumnDefinitions="Auto, *">
                <Border Width="100" Height="100" CornerRadius="50" Background="#E2E8F0">
                    <TextBlock Text="U" 
                               FontSize="44" 
                               FontWeight="Bold" 
                               Foreground="#718096"
                               HorizontalAlignment="Center"
                               VerticalAlignment="Center"/>
                </Border>

                <StackPanel Grid.Column="1" 
                            Margin="24 0 0 0" 
                            VerticalAlignment="Center">
                    <TextBlock Text="{Binding Fullname}"
                               FontSize="28"
                               FontWeight="Bold"
                               Foreground="#1A202C"/>
                    <TextBlock Text="{Binding RoleName}"
                               FontSize="16"
                               Foreground="#3182CE"
                               FontWeight="SemiBold"/>
                </StackPanel>
            </Grid>

            <Border Background="#F8FAFC" CornerRadius="16" Padding="20">
                <StackPanel Spacing="16">
                    <TextBlock Text="Учётные данные"
                               FontSize="18"
                               FontWeight="SemiBold"
                               Foreground="#2D3748"/>

                    <Grid ColumnDefinitions="130, *">
                        <TextBlock Text="Логин:"
                                   Foreground="#4A5568"
                                   FontWeight="Medium"
                                   VerticalAlignment="Center"/>
                        <TextBlock Grid.Column="1"
                                   Text="{Binding Login}"
                                   Foreground="#2D3748"
                                   FontWeight="Medium"
                                   VerticalAlignment="Center"
                                   Margin="10 0 0 0"/>
                    </Grid>

                    <Grid ColumnDefinitions="130, *">
                        <TextBlock Text="Пароль:"
                                   Foreground="#4A5568"
                                   FontWeight="Medium"
                                   VerticalAlignment="Center"/>
                        <TextBlock Grid.Column="1"
                                   Text="{Binding Password}"
                                   Foreground="#2D3748"
                                   FontWeight="Medium"
                                   VerticalAlignment="Center"
                                   Margin="10 0 0 0"/>
                    </Grid>
                </StackPanel>
            </Border>

            <Border Background="#F8FAFC" CornerRadius="16" Padding="20">
                <StackPanel Spacing="16">
                    <TextBlock Text="Информация"
                               FontSize="18"
                               FontWeight="SemiBold"
                               Foreground="#2D3748"/>

                    <Panel IsVisible="{Binding IsStudent}">
                        <StackPanel Spacing="14">
                            <Grid ColumnDefinitions="160, *">
                                <TextBlock Text="Зачётная книжка:"
                                           Foreground="#4A5568"
                                           FontWeight="Medium"
                                           VerticalAlignment="Center"/>
                                <TextBlock Grid.Column="1"
                                           Text="{Binding RegNumber}"
                                           Foreground="#2D3748"
                                           VerticalAlignment="Center"
                                           Margin="10 0 0 0"/>
                            </Grid>
                            <Grid ColumnDefinitions="160, *">
                                <TextBlock Text="Специальность:"
                                           Foreground="#4A5568"
                                           FontWeight="Medium"
                                           VerticalAlignment="Center"/>
                                <TextBlock Grid.Column="1"
                                           Text="{Binding Specialty}"
                                           Foreground="#2D3748"
                                           VerticalAlignment="Center"
                                           Margin="10 0 0 0"/>
                            </Grid>
                        </StackPanel>
                    </Panel>

                    <Panel IsVisible="{Binding IsEmployee}">
                        <StackPanel Spacing="14">
                            <Grid ColumnDefinitions="160, *">
                                <TextBlock Text="Должность:"
                                           Foreground="#4A5568"
                                           FontWeight="Medium"
                                           VerticalAlignment="Center"/>
                                <TextBlock Grid.Column="1"
                                           Text="{Binding Position}"
                                           Foreground="#2D3748"
                                           VerticalAlignment="Center"
                                           Margin="10 0 0 0"/>
                            </Grid>
                            <Grid ColumnDefinitions="160, *">
                                <TextBlock Text="Зарплата:"
                                           Foreground="#4A5568"
                                           FontWeight="Medium"
                                           VerticalAlignment="Center"/>
                                <TextBlock Grid.Column="1"
                                           Text="{Binding Salary, StringFormat='{}{0:F2} ₽'}"
                                           Foreground="#2D3748"
                                           VerticalAlignment="Center"
                                           Margin="10 0 0 0"/>
                            </Grid>
                            <Grid ColumnDefinitions="160, *">
                                <TextBlock Text="Кафедра:"
                                           Foreground="#4A5568"
                                           FontWeight="Medium"
                                           VerticalAlignment="Center"/>
                                <TextBlock Grid.Column="1"
                                           Text="{Binding Department}"
                                           Foreground="#2D3748"
                                           VerticalAlignment="Center"
                                           Margin="10 0 0 0"/>
                            </Grid>
                        </StackPanel>
                    </Panel>
                </StackPanel>
            </Border>
        </StackPanel>
    </Border>
</ScrollViewer>
</Grid>
</UserControl>
