<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="Uchebka2025_Ikhsanov.ControlPages.Authorization">
    <Grid Background="#F8FAFC" RowDefinitions="*, Auto, *" ColumnDefinitions="*, Auto, *">
    
    <!-- Центральная карточка -->
    <Border Grid.Row="1" Grid.Column="1"
            Background="White"
            CornerRadius="20"
            Padding="50 40"
            Width="420"
            BoxShadow="0 10 40 0 #40000000"
            BorderThickness="1"
            BorderBrush="#E2E8F0">

        <StackPanel Spacing="28" VerticalAlignment="Center">

            <!-- Заголовок -->
            <TextBlock Text="Авторизация"
                       FontSize="32"
                       FontWeight="Bold"
                       Foreground="#1A202C"
                       HorizontalAlignment="Center"/>

            <!-- Логин -->
            <StackPanel Spacing="8">
                <TextBlock Text="Логин"
                           FontSize="15"
                           FontWeight="SemiBold"
                           Foreground="#4A5568"/>
                <TextBox x:Name="LoginText"
                         Height="48"
                         FontSize="16"
                         Padding="14 0"
                         Watermark="Введите логин"
                         CornerRadius="12"
                         Background="#F7FAFC"
                         BorderBrush="#CBD5E0"
                         BorderThickness="1.5"/>
            </StackPanel>

            <!-- Пароль (в Avalonia используем TextBox + IsPasswordBox="True" в новых версиях, либо обычный TextBox с символом) -->
            <StackPanel Spacing="8">
                <TextBlock Text="Пароль"
                           FontSize="15"
                           FontWeight="SemiBold"
                           Foreground="#4A5568"/>
                <TextBox x:Name="PasswordText"
                         Height="48"
                         FontSize="16"
                         Padding="14 0"
                         PasswordChar="●"
                         Watermark="Введите пароль"
                         CornerRadius="12"
                         Background="#F7FAFC"
                         BorderBrush="#CBD5E0"
                         BorderThickness="1.5"/>
            </StackPanel>

            <!-- Кнопка ВОЙТИ -->
            <Button x:Name="LoginBtn"
                    Content="ВОЙТИ"
                    Height="52"
                    FontSize="18"
                    FontWeight="SemiBold"
                    Background="#3182CE"
                    Foreground="White"
                    CornerRadius="14"
                    HorizontalAlignment="Stretch"
                    HorizontalContentAlignment="Center"
                    Click="LoginBtn_Click"/>

        </StackPanel>
    </Border>
</Grid>
</UserControl>
