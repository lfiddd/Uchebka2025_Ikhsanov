                    <Button Name="HeadBtn" Content="Зав. Кафедры" Margin="0,5" Click="DepartHeadLists"/>
                    <StackPanel VerticalAlignment="Bottom">
                        <Button Content="Выход" Margin="0,5" Click="Leave"/>
                    </StackPanel>
                </StackPanel>
            </StackPanel>
        </Border>
        
